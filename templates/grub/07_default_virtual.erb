#!/bin/sh
exec tail -n +3 $0

function gfxmode {
  set gfxpayload="${1}"
  if [ "${1}" = "keep" ]; then
    set vt_handoff=vt.handoff=7
  else
    set vt_handoff=
  fi
}
if [ "${recordfail}" != 1 ]; then
  if [ -e ${prefix}/gfxblacklist.txt ]; then
    if hwmatch ${prefix}/gfxblacklist.txt 3; then
      if [ ${match} = 0 ]; then
        set linux_gfx_mode=keep
      else
        set linux_gfx_mode=text
      fi
    else
      set linux_gfx_mode=text
    fi
  else
    set linux_gfx_mode=keep
  fi
else
  set linux_gfx_mode=text
fi
export linux_gfx_mode

menuentry 'Ubuntu, with the SysEleven default kernel' --class ubuntu --class gnu-linux --class gnu --class os $menuentry_id_option 'gnulinux-simple-fb534290-7edc-11e4-82df-00215acd73e2' {
  recordfail
  load_video
  gfxmode $linux_gfx_mode
  insmod gzio
  insmod ext2
  set root='hd0,0'
  linux /vmlinuz-<%= @kernel_version %>-<%= @kernel_abi_version %>-<%= @kernel_flavor %> root=<%= @root_device %> ro max_loop=64
  initrd /initrd.img-<%= @kernel_version %>-<%= @kernel_abi_version %>-<%= @kernel_flavor %>
}
